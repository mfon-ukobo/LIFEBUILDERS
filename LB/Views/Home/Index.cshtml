@model HomePageView

@{
    ViewData["IsHomePage"] = "true";
    ViewData["title"] = "Home";
}

<!-- Homepage Slider -->

<div class="rev_slider_wrapper fullwidthbanner-container">
    <div id="rev_slider_1" class="rev_slider fullwidthabanner" data-version="5.4.8" style="display: none">
        <ul>
            @foreach (var carousel in Model.Carousels)
            {
                <li data-transition="random-premium">
                    <img src="~/uploads/images/@carousel.Image.Image" class="rev-slidebg" alt="">

                    @if (!string.IsNullOrEmpty(carousel.Caption) && !string.IsNullOrWhiteSpace(carousel.Caption))
                    {
                        <div class="tp-caption tp-resizeme text-center caption font-weight-bold" id="slide-4-layer-1" data-x="center"
                             data-y="center" data-voffset="-50%"
                             data-fontsize="50" data-lineheight="60"
                             data-width="100%" data-height="none"
                             data-whitespace="normal" data-transform_idle="o:1;"
                             data-transform_in="y:-50px;opacity:0;s:800;e:Power3.easeInOut;" data-transform_out="opacity:0;s:300;"
                             data-start="1000" data-color="white" data-splitin="none" data-splitout="none" data-responsive_offset="on">
                            @carousel.Caption
                        </div>
                    }

                    @if (!string.IsNullOrEmpty(carousel.Details) && !string.IsNullOrWhiteSpace(carousel.Details))
                    {
                        <div class="tp-caption tp-resizeme"
                             data-fontsize="[24]"
                             data-fontweight="600"
                             data-color="white"
                             data-start="2000"
                             data-x="center"
                             data-y="center"
                             data-transform_in="y:100;e:easeInOut"
                             data-transform_out="y:-50px;x:-100px;"
                             data-hoffset="0" data-voffset="10" data-width="['auto']" data-height="['auto']">
                            @carousel.Details
                        </div>
                    }

                    @if (carousel.HasButton)
                    {
                        <div class="tp-caption tp-resizeme"
                             data-fontsize="[24]"
                             data-fontweight="600"
                             data-color="white"
                             data-start="2000"
                             data-x="center"
                             data-y="center"
                             data-transform_in="y:100;e:easeInOut"
                             data-transform_out="y:-50px;x:-100px;"
                             data-hoffset="0" data-voffset="100" data-width="['auto']" data-height="['auto']">
                            <a href="@carousel.ButtonLink" class="theme-button button-1 text-center">@carousel.ButtonText</a>
                        </div>
                    }
                </li>
            }
        </ul>
    </div>
</div>

<!-- Next Event Countdown -->
<section class="py-5 bg-theme-1">
    <div class="container">
        <div class="row justify-content-between text-white">
            <div class="col-md-4">
                <h4>Next Event in:</h4>
                <span>@(Model.NextEvent?.Title ?? "No Upcoming Event")</span>
            </div>
            <div class="col-md-4 mb-3 mb-md-0">
                <div class="timer">

                </div>
            </div>
            <div class="col-auto">
                <a asp-action="Single" asp-controller="Events" asp-route-id="@Model.NextEvent?.Slug" class="theme-button button-4">
                    <span>Event Details</span>
                </a>
            </div>
        </div>
    </div>
</section>

