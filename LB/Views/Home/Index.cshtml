<section class="s-p-100 bg-image" style="background-image: url('img/arena.jpg');">
    <div class="container">
        <h1 class="section-title text-white text-center">Get Connected. What’s Your Next Step? <br> Follow. Connect. Go.</h1>
        <div class="custom-heading-1 text-white">
            Following Jesus as disciples and connecting with others as part of a spiritual family
        </div>
        <div class="text-center">
            <a target="_blank" asp-action="Index" asp-controller="Discipleship" class="theme-button button-1 mr-2 mb-3">
                <span>join a discipleship <br /> group</span>
            </a>
            <a target="_blank" asp-action="Index" asp-controller="Donate" class="theme-button button-1 mr-2 mb-3">
                <span>missions &amp; <br> donation</span>
            </a>
            <a target="_blank" asp-action="Index" asp-controller="Resources" class="theme-button button-1 mr-2 mb-3">
                <span>resource <br> materials </span>
            </a>
        </div>
    </div>
</section>


<section class="s-p-100">
    <div class="container">
        <div class="row">
            <div class="col-lg-6">
                <header class="section-header">
                    <span>Resources</span>
                    <h2 class="title">Teaching Videos &amp; Audios</h2>
                </header>
                <div>
                    @foreach (var resource in Model.Resources)
                    {
                        <div class="card message-card">
                            <div class="row">
                                <div class="col-sm-6">
                                    <div class="image-container image-10-9">
                                        <img src="/uploads/images/@resource.Image.Thumbnail" alt="" class="image">
                                        <a href="" class="hover-overlay">
                                            <i class="hover-icon icofont-link icofont-2x"></i>
                                        </a>
                                    </div>
                                </div>
                                <div class="col">
                                    <div class="card-body">
                                        <h5>@resource.Title</h5>
                                        <div class="small">
                                            @if (!string.IsNullOrEmpty(resource.Description))
                                            {
                                                @if (resource.Description.Length > 50)
                                                {
                                                    @Html.Raw(resource.Description.Substring(0, 50))
                                                }
                                                else
                                                {
                                                    @Html.Raw(resource.Description)
                                                }
                                            }
                                            ...
                                        </div>
                                        <div class="meta small">
                                            by Ifiok Ukobo / Friday, Juy 31, 2016
                                        </div>
                                        <a asp-action="Resource" asp-controller="Resources" asp-route-id="@resource.Slug" class="small">View More</a>
                                    </div>
                                </div>
                            </div>
                        </div>
                    }
                </div>
            </div>
            <div class="col-lg-6">
                <header class="section-header">
                    <span>Upcoming Events</span>
                    <h2 class="title">Conferences &amp; Events</h2>
                </header>
                <div class="homepage-events">
                    @foreach (var ev in Model.Events)
                    {
                        <div class="event">
                            <span class="date">
                                @{
                                    var date = DateTime.Parse(ev.StartDate);
                                }
                                <span class="month">@date.ToString("MMM")</span>
                                <span class="day">@date.ToString("dd")</span>
                            </span>
                            <h6 class="title">
                                <a asp-action="single" asp-controller="events" asp-route-id="@ev.Slug">@ev.Title</a>
                            </h6>
                            <span class="time d-none d-xl-block">@ev.StartTime - @ev.EndTime</span>
                            <span class="details">
                                <a asp-action="single" asp-controller="events" asp-route-id="@ev.Slug">Details</a>
                            </span>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</section>

<!-- Gallery -->
