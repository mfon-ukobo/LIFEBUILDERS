<!-- Blog Section -->
<section class="s-p-100">
    <div class="container">
        <header class="section-header">
            <span>Latest News</span>
            <h2>From our blog</h2>
        </header>
        <div class="row justify-content-center">
            @foreach (var post in Model.Posts)
            {
                <div class="col-lg-4 col-md-6">
                    <div class="card news-card">
                        <div alt="" class="image-container image-16-9">
                            @if (post.Type == PostTypes.Default)
                            {
                                @if (post.Image != null)
                                {
                                    <img src="/uploads/images/@post.Image.Thumbnail" class="image" alt="">
                                }
                            }
                            else if (post.Type == PostTypes.Video)
                            {
                                <div class="div position-absolute" style="top: 0; left: 0; width: 100%; height: 100%;">
                                    @Html.Raw(post.VideoUrl)
                                </div>
                            }
                            else if (post.Type == PostTypes.Audio)
                            {
                                <div class="div position-absolute" style="top: 0; left: 0; width: 100%; height: 100%;">
                                    @Html.Raw(post.AudioUrl)
                                </div>
                            }
                            <a asp-action="single" asp-controller="blog" asp-route-id="@post.Slug" class="hover-overlay">
                                <i class="hover-icon icofont-link icofont-2x"></i>
                            </a>
                            <div class="date">
                                <span class="month">@post.Modified.ToString("MMM")</span>
                                <span class="day">@post.Modified.ToString("dd")</span>
                            </div>
                        </div>
                        <div class="card-body">
                            <h5 class="title">
                                <a asp-action="single" asp-controller="blog" asp-route-id="@post.Slug">@post.Title</a>
                            </h5>
                            <div class="meta">
                                <span>
                                    by @post.Author
                                </span>
                                <span>
                                    / 0 Comments
                                </span>
                            </div>
                            <div class="description">
                                <p>
                                    @post.Caption
                                </p>
                            </div>
                        </div>
                    </div>
                </div>
            }
        </div>

        <div class="text-center"><a asp-action="index" asp-controller="blog" class="theme-button button-2"><span>Read More</span></a></div>
    </div>
</section>

