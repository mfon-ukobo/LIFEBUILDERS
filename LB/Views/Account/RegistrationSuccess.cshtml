
@{
    ViewData["Title"] = "RegistrationSuccess";
}

    <section class="py-5">
        <div class="container">
            @(await Html.PartialAsync("_Alerts"))
            <div class="row">
                <div class="col-lg-6">
                    <div class="card">
                        <div class="card-body">
                            <h2>You have been registered!</h2>
                            <p>A confirmation mail has been sent to your email address. <br /> You will not be able to login without confirmation.</p>

                            <a href="/" class="theme-button button-1">Continue</a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>

