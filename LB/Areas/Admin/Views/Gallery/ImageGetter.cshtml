<div class="container">
    <div>
        <button data-fancybox data-type="ajax" data-src="@Url.Action("Create", "Gallery")" class="btn btn-az-primary">
            <i class="fa fa-plus"></i>
            Create
        </button>
    </div>


    <div id="galleryApp" class="row mt-4">
        <div class="col-lg-12">
            <div class="card">
                <div class="card-body">
                    <div class="row">
                        <div class="col-xl-3 col-lg-4 col-sm-6" v-for="item in list">
                            <div class="card mb-4" onclick="">
                                <img :src="item.thumbnail" alt="" class="card-img-top rounded-0" style="height: 200px; object-fit: cover;" :data-path="item.thumbnail" :data-id="item.id" data-fancybox-close />
                                <div class="card-body">
                                    <div class="btn-icon-list">
                                        <a :href="item.image" data-fancybox="image" class="btn btn-primary btn-icon">
                                            <i class="typcn typcn-eye"></i>
                                        </a>
                                        <button class="btn btn-indigo btn-icon">
                                            <i class="typcn typcn-edit"></i>
                                        </button>
                                        <button class="btn btn-danger btn-icon">
                                            <i class="typcn typcn-delete"></i>
                                        </button>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <script>
    var galleryApp = new Vue({
        el: '#galleryApp',
        data: {
            list: []
        },
        methods: {
            fetchPictures: function () {
                $.ajax({
                    url: '@Url.Action("picturelist", "gallery")',
                    dataType: 'json',
                    success: (data) => {
                        console.log(data);
                        this.list = data.data;
                    }
                });
            }
        },
        created: function () {
            this.fetchPictures();
        }
    });
    </script>
</div>