@model Tag

<div id="tag-accordion" class="accordion" role="tablist" aria-multiselectable="true">
    <div class="card">
        <div class="card-header" role="tab" id="headingOne">
            <a data-toggle="collapse" href="#collapseOne" aria-expanded="false" aria-controls="collapseOne" class="">
                Create Tag
                <i class="la la-caret-down float-right"></i>
            </a>
        </div><!-- card-header -->

        <div id="collapseOne" data-parent="#tag-accordion" class="collapse show" role="tabpanel" aria-labelledby="headingOne" style="">
            <div class="card-body">
                <form asp-action="CreateTag" method="post">
                    <div class="form-group">
                        <label asp-for="Name"></label>
                        <input asp-for="Name" class="form-control" />
                        <span asp-validation-for="Name" class="text-danger"></span>
                    </div>

                    <button class="btn btn-with-icon btn-primary">
                        <i class="la la-plus"></i>
                        Submit
                    </button>
                </form>
            </div>
        </div>
    </div>
</div>