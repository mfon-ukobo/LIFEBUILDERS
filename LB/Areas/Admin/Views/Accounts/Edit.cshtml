@model AdminUser
@inject UserManager<AppUser> userManager

@{
    ViewData["Title"] = "Edit Admin User";
}

    <nav class="mb-3">
        <a asp-action="Index" asp-controller="Accounts" class="btn btn-indigo btn-with-icon">
            <i class="la la-arrow-left"></i>
            Back to List
        </a>
        <a asp-action="Create" asp-controller="Accounts" class="btn btn-success btn-with-icon">
            <i class="la la-plus"></i>
            Create New
        </a>
    </nav>

    <form asp-action="Edit" method="post">
        <input asp-for="AppUserId" name="id" hidden />
        <div class="row">
            <div class="col-lg-6">
                <div class="card">
                    <div class="card-body">
                        <div class="form-group">
                            <label>Username</label>
                            <input asp-for="AppUser.UserName" class="form-control" />
                        </div>

                        <div class="form-group">
                            <label asp-for="SelectedRoles">Roles</label>
                            <select asp-for="SelectedRoles" asp-items="@(new MultiSelectList(ViewBag.Roles, "Name", "Name", await userManager.GetRolesAsync(Model.AppUser)))" class="form-control select"></select>
                        </div>

                        <div class="form-group">
                            <button class="btn btn-with-icon btn-primary">
                                <i class="la la-save"></i>
                                Update
                            </button>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </form>